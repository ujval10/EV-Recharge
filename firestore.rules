
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Stations: Publicly readable, admin-only write access
    match /stations/{stationId} {
      // Allow anyone to read station data (list and get)
      allow get, list: if true;
      // Allow only admins to create, update, or delete stations
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: Can create/update their own profile, admins can read all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent users from deleting their own accounts through the app
    }

    // Bookings: Users can create/read their own bookings
    match /bookings/{bookingId} {
      // Allow users to list and get their own bookings
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.get('userId') == request.auth.uid;
      
      // Allow users to create a booking for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users cannot change or delete bookings for now
      allow update, delete: if false; 
    }
  }
}
